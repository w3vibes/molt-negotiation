{
  "name": "molt-negotiation",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "contracts"
  ],
  "scripts": {
    "build": "npm run --workspaces build",
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:web\"",
    "dev:api": "bash -c 'set -a && source .env && set +a && npm --workspace apps/api run dev'",
    "dev:web": "npm --workspace apps/web run dev",
    "test": "npm run --workspaces test",
    "verify:tee": "node scripts/verify-eigencompute.mjs",
    "verify:launch": "node scripts/launch-readiness.mjs",
    "web:env:sync": "bash scripts/sync-web-env.sh",
    "deploy:first": "bash scripts/prod-first-deploy.sh",
    "release:prod": "bash scripts/prod-release.sh",
    "e2e:strict": "bash scripts/strict-e2e.sh",
    "escrow:prepare": "node scripts/prepareEscrow.mjs",
    "escrow:player:deposit": "node scripts/depositEscrow.mjs",
    "deploy:agents": "bash scripts/deploy-agents.sh"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "next": "16.1.6"
  }
}
